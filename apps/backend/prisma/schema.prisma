generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Order {
  id          String   @id @default(uuid())
  customerId  String
  totalAmount Decimal
  status      String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model OutboxEvent {
  id          String   @id @default(uuid())
  topic       String
  key         String?
  payload     Json
  status      String   @default("pending")
  retries     Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([status])
}

model OutboxDlq {
  id          String   @id @default(uuid())
  originalId  String
  topic       String
  key         String?
  payload     Json
  reason      String
  createdAt   DateTime @default(now())
}
