    "check:postgres": "bun run scripts/dev/checks/checkPostgres.ts",
    "seed:cassandra": "bun run scripts/dev/seedCassandra.ts",
    "check:cassandra": "bun run scripts/dev/checks/checkCassandra.ts"
  },
  "devDependencies": {
    "@types/bun": "latest",
