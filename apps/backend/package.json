{
  "name": "backend",
  "module": "index.ts",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "bun src/index.ts",
    "generate:types": "openapi-typescript ./spec/index.yml --output ./src/types/api.d.ts",
